<Window x:Class="PL.EnterSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="EnterSystemWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        >

    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#B3D9FF" Offset="0"/>
                <GradientStop Color="#E6F2FF" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Decorative Circles -->
        <Canvas>
            <!-- Large Circle Top-Left -->
            <Ellipse Width="100" Height="100" Fill="LightBlue" Opacity="0.5" Canvas.Left="628" Canvas.Top="340" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- Medium Circle Bottom-Right -->
            <Ellipse Width="68" Height="62" Fill="CornflowerBlue" Opacity="0.6" Canvas.Left="683" Canvas.Top="318" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Ellipse Width="83" Height="80" Fill="LightBlue" Opacity="0.5" Canvas.Left="731" Canvas.Top="357" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- Medium Circle Bottom-Right -->
            <Ellipse Width="47" Height="46" Fill="CornflowerBlue" Opacity="0.6" Canvas.Left="713" Canvas.Top="368" RenderTransformOrigin="0.96,1.18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Ellipse Width="80" Height="80" Fill="CornflowerBlue" Opacity="0.6" Canvas.Left="723" Canvas.Top="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Ellipse Width="47" Height="44" Fill="LightBlue" Opacity="0.5" Canvas.Left="703" Canvas.Top="396" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Ellipse Width="66" Height="64" Fill="CornflowerBlue" Opacity="0.6" Canvas.Left="597" Canvas.Top="377" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Ellipse Width="57" Height="50" Fill="LightBlue" Opacity="0.5" Canvas.Left="757" Canvas.Top="282" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Ellipse Width="47" Height="44" Fill="LightBlue" Opacity="0.5" Canvas.Left="581" Canvas.Top="409" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Small Circle Center -->
        </Canvas>

        

        <!-- Title Label -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,64,0,0" Grid.RowSpan="3">
            <TextBlock Text="Welcome to Bright Futures" 
                       FontSize="45" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="DarkBlue" FontFamily="Kristen ITC" Height="80" Width="622" />
            <TextBlock Text="Volunteers Helping Kids Succeed" 
                       FontSize="20" 
                       FontStyle="Italic" 
                       HorizontalAlignment="Center" 
                       Foreground="DarkGray" Height="40" />
        </StackPanel>


        <Label Content="Enter your T.Z:" FontSize="20"  HorizontalAlignment="Left"  VerticalAlignment="Top" FontFamily="Cascadia Code SemiBold" Width="197" Grid.Row="2" Margin="217,67,0,0" />
        <Label Content="Enter your password:" FontSize="20"  HorizontalAlignment="Left" Margin="191,105,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code SemiBold" RenderTransformOrigin="-0.018,0.62" Width="255" Grid.Row="2"/>
        <TextBox HorizontalAlignment="Left" Margin="446,71,0,0" TextWrapping="Wrap" Text="{Binding TzValue}" VerticalAlignment="Top" Width="120" Grid.Row="2"   />
        <PasswordBox HorizontalAlignment="Left" Margin="446,112,0,0" VerticalAlignment="Top" Width="120"  PasswordChanged="PasswordBox_PasswordChanged" Grid.Row="2" />

        <Button Content="Login" HorizontalAlignment="Left" Margin="322,28,0,0" VerticalAlignment="Top" Width="150" Click="LoginButton_Click" Grid.Row="3"/>


    </Grid>
</Window>
