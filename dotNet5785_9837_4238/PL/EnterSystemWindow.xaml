<Window x:Class="PL.EnterSystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="EnterSystemWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#B3D9FF" Offset="0"/>
                <GradientStop Color="#E6F2FF" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Label -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,64,0,0" Grid.RowSpan="3">
            <TextBlock Text="Welcome to Bright Futures" 
                       FontSize="45" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="DarkBlue" FontFamily="Kristen ITC" Height="80" Width="622" />
            <TextBlock Text="Volunteers Helping Kids Succeed" 
                       FontSize="20" 
                       FontStyle="Italic" 
                       HorizontalAlignment="Center" 
                       Foreground="DarkGray" Height="40" />
        </StackPanel>


        <Label Content="Enter your T.Z:" FontSize="20"  HorizontalAlignment="Left"  VerticalAlignment="Top" FontFamily="Cascadia Code SemiBold" Width="197" Grid.Row="2" Margin="217,67,0,0" />
        <Label Content="Enter your password:" FontSize="20"  HorizontalAlignment="Left" Margin="191,105,0,0" VerticalAlignment="Top" FontFamily="Cascadia Code SemiBold" RenderTransformOrigin="-0.018,0.62" Width="255" Grid.Row="2"/>
        <TextBox HorizontalAlignment="Left" Margin="446,71,0,0" TextWrapping="Wrap" Text="{Binding TzValue}" VerticalAlignment="Top" Width="120" Grid.Row="2"   />
        <PasswordBox HorizontalAlignment="Left" Margin="446,112,0,0" VerticalAlignment="Top" Width="120"  PasswordChanged="PasswordBox_PasswordChanged" Grid.Row="2" />

        <Button Content="Login" HorizontalAlignment="Left" Margin="322,28,0,0" VerticalAlignment="Top" Width="150" Click="LoginButton_Click" Grid.Row="3"/>


    </Grid>
</Window>
