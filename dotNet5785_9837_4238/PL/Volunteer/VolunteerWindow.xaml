

<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#A9A9A9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FFF8DC"/>
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Beige"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFDAB9"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10" Background="#F5F5DC">
        <!-- Define a grid with 4 columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Label (left column) -->
            <ColumnDefinition Width="*"/>
            <!-- Element (left column) -->
            <ColumnDefinition Width="Auto"/>
            <!-- Label (right column) -->
            <ColumnDefinition Width="*"/>
            <!-- Element (right column) -->
        </Grid.ColumnDefinitions>

        <!-- Add dynamic rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Add more rows if needed -->
        </Grid.RowDefinitions>

        <!-- Left column (Label and element) -->
        <Label Grid.Row="0" Grid.Column="0" Content="Volunteer ID:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentVolunteer.VolunteerId}" IsReadOnly="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVolunteer.Name}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Phone:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVolunteer.Phone}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVolunteer.Email}"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Role:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Source={StaticResource RoleTypeCollectionKey}}" 
                  SelectedValue="{Binding CurrentVolunteer.RoleType}"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            
            <TextBox Text="{Binding CurrentVolunteer.Password}" />
            <Button Content="Generate Password" Click="GeneratePassword_Click" />
        </StackPanel>

        <Label Grid.Row="6" Grid.Column="0" Content="Address:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVolunteer.Address}"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Maximum Distance:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVolunteer.Distance}"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Is Active:" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="8" Grid.Column="1" IsChecked="{Binding CurrentVolunteer.IsActive}"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Sum of Cared Calls:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding CurrentVolunteer.SumOfCaredCall}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="10" Grid.Column="0" Content="Sum of Cancelled Calls:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding CurrentVolunteer.SumOfCancelledCall}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="11" Grid.Column="0" Content="Sum of Expired Calls:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding CurrentVolunteer.SumOfCallExpired}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <!-- Right column (Label and element) -->
        <Label Grid.Row="0" Grid.Column="2" Content="Assignment Id:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding CurrentVolunteer.callInCaring.Id}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="1" Grid.Column="2" Content="Call Id:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CurrentVolunteer.callInCaring.CallId}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="2" Grid.Column="2" Content="Type of the Call:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <ComboBox Grid.Row="2" Grid.Column="3" ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}" 
                  SelectedValue="{Binding CurrentVolunteer.callInCaring.CallType}" IsEnabled="False" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="3" Grid.Column="2" Content="Call details:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CurrentVolunteer.callInCaring.Details}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="4" Grid.Column="2" Content="Call Address:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding CurrentVolunteer.callInCaring.Adress}" IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="5" Grid.Column="2" Content="Opening Time:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <DatePicker Grid.Row="5" Grid.Column="3" SelectedDate="{Binding CurrentVolunteer.callInCaring.OpenTime}" IsEnabled="False" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="6" Grid.Column="2" Content="Maximum Time:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <DatePicker Grid.Row="6" Grid.Column="3" SelectedDate="{Binding CurrentVolunteer.callInCaring.MaxTime}" IsEnabled="False" Visibility ="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="7" Grid.Column="2" Content="Starting Time:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <DatePicker Grid.Row="7" Grid.Column="3" SelectedDate="{Binding CurrentVolunteer.callInCaring.StartTime}" IsEnabled="False" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="8" Grid.Column="2" Content="Distance:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <TextBox Grid.Row="8" Grid.Column="3" Text="{Binding CurrentVolunteer.callInCaring.distance}"  IsReadOnly="True" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <Label Grid.Row="9" Grid.Column="2" Content="Call Status:" VerticalAlignment="Center" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>
        <ComboBox Grid.Row="9" Grid.Column="3" ItemsSource="{Binding Source={StaticResource CallStatusCollectionKey}}" 
                  SelectedValue="{Binding CurrentVolunteer.callInCaring.CallInProgressStatus}" IsEnabled="False" Visibility="{Binding ButtonText, Converter={StaticResource ConverterAddUpdateKey}}"/>

        <!-- Add/Update Button -->
        <Button Grid.Row="11" Content="{Binding ButtonText}" HorizontalAlignment="Left" Margin="52,83,0,-73" 
                Click="btnAddUpdate_Click" Width="150" Grid.Column="1"/>
    </Grid>
</Window>

